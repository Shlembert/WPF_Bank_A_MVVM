<Window x:Class="BankA_MVVM_UI.Views.NewClientWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Новый клиент" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Имя клиента:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="ClientNameTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Добавить" Width="100" HorizontalAlignment="Center" Click="AddClientButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
