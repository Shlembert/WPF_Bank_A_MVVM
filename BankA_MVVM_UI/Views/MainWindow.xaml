<Window x:Class="BankA_MVVM_UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Банковская система" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel 
            Orientation="Vertical" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="10">
            
            <TextBlock 
                Text="Банк-А" 
                FontSize="24" 
                FontWeight="Bold" 
                Margin="0,0,0,20" 
                HorizontalAlignment="Center"/>

            <TextBlock 
                Text="Список клиентов:" 
                FontSize="16" 
                Margin="0,0,0,10"/>
            <ListBox 
                x:Name="ClientsListBox" 
                Width="400" Height="200" 
                Margin="0,0,0,20" 
                SelectionChanged="ClientsListBox_SelectionChanged"/>

            <Button 
                Content="Новый клиент" 
                Click="NewClient_Click" 
                Width="200" 
                HorizontalAlignment="Center"/>
            <Button 
                Content="Лог операций" 
                Click="OpenLogWindow_Click" 
                Width="200" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
