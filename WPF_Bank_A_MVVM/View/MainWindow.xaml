<Window x:Class="WPF_Bank_A_MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Bank_A_MVVM.View"
        xmlns:viewModels="clr-namespace:WPF_Bank_A_MVVM.ViewModels"
        mc:Ignorable="d"
        Title="Банковская система" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Банк-А" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Список клиентов:" FontSize="16" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding Clients}" DisplayMemberPath="Name" Width="400" Height="200" Margin="0,0,0,20" SelectedItem="{Binding SelectedClient}"/>
            <Button Content="Новый клиент" Command="{Binding NewClientCommand}" Width="200" HorizontalAlignment="Center"/>
            <Button Content="Лог операций" Command="{Binding OpenLogCommand}" Width="200" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
